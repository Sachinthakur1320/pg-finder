<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <title>PG FINDER</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
   <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
   <script src="ejs.js"></script>
  </head>
  <body>       
          <nav class="navbar navbar-expand-lg bg-dark">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="#">PG FINDER</a>
                </div>
                <ul class="navbar-nav mr-auto">
                  <li class="nav-link"><a href="/">HOME</a></li>
                      <li class="nav-link"><a href="#">ABOUT</a></li>
                      <li class="nav-link"><a href="#">CONTACT</a></li>
                      </ul>
                <ul class="nav navbar-nav navbar-right">
                  <ul class="nav navbar-nav navbar-right ">
                    <% if(login){ %>
                      <li><a href="/user/logout"><span class="glyphicon glyphicon-log-in"></span> logout</a></li>
                      <% } else{ %>   
                  <li><a href="/user/signup"><span class="glyphicon glyphicon-info-sign"></span> SignUp</a></li>
                  <li><a href="/user/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                  <% } %>
                </ul>
                </ul>
              </div>
            </nav>
    <div class="col-sm-14 col-sm-offset-2">
      <div class="jumbotron text-center">
        <h1><span class="fa fa-sign-in"></span> REGISTRATION</h1>
        <form action="/user/signup" method="post">
        <% if(typeof messages != 'undefined'){%>
          <% messages.forEach(function(message){ %>
            <div class="alert alert-warning">
            <%= message.msg %>
        </div>
          <% }) %>
          <% } %>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" id="name" required>
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" name="city" id="city" required>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="emailid" id="emailid" required>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" id="password" required>
          </div>
          <div>
            <input type="submit" class="form-control" value="Submit" />
          </div>
        </form>
      </div>
<br>
      <span class="fa fa-sign-in"> Already have an account?<a href="/user/login"> Login</a></span>
      <p>Or go <a href="/">home</a>.</p>
    </div>
  </body>
</html>